# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

# 4 space indentation for python and css
[*.{css,py}]
indent_style = space
indent_size = 4

# Indentation for Config/Assets
[{config.json, assets/*.json}]
indent_style = space
indent_size = 2
